{
  "name": "huglu-backend",
  "version": "1.0.0",
  "description": "Backend API server for Huglu mobile app",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node server-production.js",
    "dev": "nodemon server.js",
    "dev:prod": "nodemon server-production.js",
    "migrate": "node migrate-to-multi-tenant.js",
    "install:prod": "npm install --production",
    "test": "node test-server.js",
    "logs": "tail -f logs/access.log",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop huglu-api",
    "pm2:restart": "pm2 restart huglu-api",
    "pm2:logs": "pm2 logs huglu-api"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "iyzipay": "^2.0.64",
    "morgan": "^1.10.0",
    "mysql2": "^3.14.4",
    "node-cron": "^3.0.3",
    "react-native-async-storage": "^0.0.1",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "nodemon": "^3.0.1"
  },
  "private": true
}
